<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonation.ProfilePage"
             Title="Profile">

        <ScrollView>
        <StackLayout Style="{StaticResource CustomStackLayoutEnteriesStyle}">

            <Image Source="ProfileInfo.png" Margin="10,0,10,0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapProfile" Tapped="TapProfile_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
            
            <Button Text="Manage Donors" TextColor="#d21d1d" Margin="10,5,10,5" Clicked="Button_Clicked_Donors"/>
            <Button Text="Manage Requests" TextColor="#d21d1d" Margin="10,5,10,5" Clicked="Button_Clicked_Requests"/>
            <Button Text="Change Password" TextColor="#d21d1d" Margin="10,5,10,5" Clicked="BtnChangePasswordClicked"/>
            <Button Text="Logout" TextColor="#d21d1d" Margin="10,0,10,5" Clicked="Button_Clicked"/>

        </StackLayout>
        </ScrollView>
</ContentPage>